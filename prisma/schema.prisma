model Devis {
  id                String      @id @default(cuid())
  numero            String      @unique
  type              TypeDevis   @default(DEVIS)
  statut            StatutDevis @default(BROUILLON)
  
  // Relations
  client            User        @relation("DevisClient", fields: [clientId], references: [id])
  clientId          String
  chantier          Chantier?   @relation(fields: [chantierId], references: [id])
  chantierId        String?
  
  // Contenu
  objet             String
  dateCreation      DateTime    @default(now())
  dateValidite      DateTime?
  dateEnvoi         DateTime?
  dateAcceptation   DateTime?
  datePaiement      DateTime?
  
  // Montants
  totalHT           Decimal     @default(0)
  totalTVA          Decimal     @default(0)
  totalTTC          Decimal     @default(0)
  
  // Métadonnées
  notes             String?     @db.Text
  conditionsVente   String?     @db.Text
  
  // Relations
  lignes            LigneDevis[]
  facture           Devis?      @relation("DevisToFacture", fields: [factureId], references: [id])
  factureId         String?
  devisOrigine      Devis?      @relation("DevisToFacture")
  
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
}

